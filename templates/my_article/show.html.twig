{% block title %}MyArticle{% endblock %}

{% block body %}
    <h1>MyArticle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ my_article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ my_article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ my_article.content }}</td>
            </tr>
            <tr>
